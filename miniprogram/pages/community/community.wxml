<!--miniprogram/pages/discuss/discuss.wxml-->
<view class="community-page-container">
  <view class="top-nav">
    <fun-tab items="{{['全部', '待处理', '已处理']}}" bind:onChange="changeTab"/>
  </view>
  <view class="item" data-id="{{item._id}}" wx:key="{{index}}" wx:for="{{list}}"  bindtap="toAdviseDetail">
    <text class="title">{{item.title}}</text>
    <view class="dec">{{item.description}}</view>
    <view class='extra'>
      <text class="time">{{item.createdAt}}</text>
      <view class="operate">
        <span class="like"><image src='../../images/like.png' />{{item.like}}</span>
        <span class="reply"><image src='../../images/reply.png' />{{item.reply}}</span>
        <span class="discuss"><image src='../../images/discuss.png' />{{item.comment}}</span>
      </view>
    </view>
  </view>
  <navigator class='add' url="../advise/advise" open-type="navigate"><image src='../../images/add1.png' /></navigator>
</view>
