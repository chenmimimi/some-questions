<!--miniprogram/pages/home.wxml-->

<view class='mine-page-container'>
  <view class="top-nav">
    <fun-tab items="{{['待处理', '已处理']}}" bind:onChange="changeTab"/>
  </view>
  <swipe-acton
    bind:onTap="toAdviseDetail"
    bind:onLeftTap="onConfirm"
    bind:onRightTap="onDelete"
    leftText="已处理"
    rightText="删除"
    data-id="{{item._id}}"
    wx:key="{{index}}"
    wx:for="{{list}}"
  >
    <view class="item">
      <text class="title">{{item.title}}</text>
      <view class="dec">{{item.description}}</view>
      <view class='extra'>
        <text class="time">{{item.createdAt}}</text>
        <view class="operate">
          <span class="like"><image src='../../images/like.png' />{{item.like}}</span>
          <span class="reply"><image src='../../images/reply.png' />{{item.reply}}</span>
          <span class="discuss"><image src='../../images/discuss.png' />{{item.comment}}</span>
        </view>
      </view>
    </view>
  </swipe-acton>

  <navigator class='add' url="../advise/advise" open-type="navigate"><image src='../../images/add1.png' /></navigator>
</view>
