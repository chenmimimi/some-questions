<!--miniprogram/pages/home.wxml-->

<view class='home-page-container'>
  <view class="top-nav">
    <fun-tab items="{{['待处理', '已处理']}}" onChange="{{changeTab}}"/>
  </view>
  <swipe-acton
    bind:onTap="toAdviseDetail"
    bind:onLeftTap="onConfirm"
    bind:onRightTap="onDelete"
    leftText="已处理"
    rightText="删除"
    data-id="{{item._id}}"
    wx:key="{{index}}"
    wx:for="{{list}}"
  >
    <view class="item">
      <text class="title">{{item.title}}</text>
      <view class="dec">{{item.description}}</view>
      <view class='extra'>
        <text class="time">2019-04-30 12:12:12</text>
      </view>
      <view class="operate detail">
        <span class="like"><image class='like-image' src='../../images/like.png' />20</span>
        <span class="discuss"><image class='discuss-image' src='../../images/discuss.png' />20</span>
      </view>
    </view>
  </swipe-acton>

  <navigator class='add' url="../advise/advise" open-type="navigate"><image src='../../images/add1.png' /></navigator>
</view>
