/* components/list/index.wxss */
.item{
  position: relative;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #E8E8E8;
  padding-bottom: 0;
}
.title{
  color: #424a5e;
  font-size: 32rpx;
  font-weight: bold;
}
.dec{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color: #61687c;
  font-size: 28rpx;
}
icon{
  float: right;
  vertical-align: top;
}
.extra{
  font-size: 24rpx;
  color: #bbb;
}
.time{
  line-height: 80rpx;
}
.operate{
  color: #999
}
.like{
  margin-right: 20rpx;
  line-height: 40rpx;
}
.reply{
  margin-right: 20rpx;
}
.like image, .discuss image, .reply image{
  vertical-align: middle;
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
  margin-top: -5rpx;
}
.liked{
  color: #fc6c38
}
.replied, .commented {
  color: #00c2b3;
}
.operate{
  float: right;
  text-align: right;
  font-size: 26rpx;
  height: 78rpx;
  line-height: 100rpx;
  background-color:#fff;
}
