<view class="swipe-action-wrapper">
  <view class="swipe-action-ctn"
    bindtouchstart="{{action.touchStart}}"
    bindtouchmove="{{action.touchMove}}"
    bindtouchend="{{action.touchEnd}}"
    bindtap="{{action.onTap}}"
  >
    <slot />
  </view>
  <view class="swipe-action-options">
    <view class="swipe-action-option" bindtap="onLeftTap"><text>{{leftText}}</text></view>
    <view class="swipe-action-option swipe-action-option-waring" bindtap="onRightTap"><text>{{rightText}}</text></view>
  </view>
</view>
<wxs module="action" src="./index.wxs" />
