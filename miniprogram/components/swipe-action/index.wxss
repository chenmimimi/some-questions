.swipe-action-wrapper {
  width: 100%;
  position: relative;
}
.swipe-action-ctn {
  position: relative;
  z-index: 50;
  background: #FFF;
}
.swipe-action-options {
  position: absolute;
  top: 0;
  right: 0;
  /* width: 120px; */
  height: 100%;
  text-align: center;
  line-height: 90rpx;
}
.swipe-action-option {
  display: inline-block;
  box-sizing: border-box;
  padding: 30rpx 45rpx;
  height: 100%;
  font-size: 32rpx;
  text-align: center;
  color: #FFF;
  background: #5dd5c8;
}

.swipe-action-option-right {
  background: #FF6666;
}
