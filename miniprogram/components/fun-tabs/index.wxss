/* components/tabs/index.wxss */
.fun-tabs {
  line-height: 72rpx;
  background-color: #fff;
}
.tab-content {
  position: relative;
  overflow: auto hidden;
}
.tab-list {
  display: flex;
  align-items: center;
  font-size: 30rpx;

}
.tab-item {
  flex: 1;
  color: #949aa7;
  text-align: center;
  padding: 0 30rpx;
}
.tab-item.active {
  color: #333;
}

.tab-name {
  display: inline-block;
  max-width: 300rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: top;
}

.tab-line {
  position: absolute;
  bottom: 0;
  height: 2px;
  background: #333;
  transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
}